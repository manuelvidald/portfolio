---
// src/components/AboutCard.astro
interface Props {
    iconClass: string;
    title: string;
    description: string;
}

const { iconClass, title, description } = Astro.props;
---
<div class="about-card">
    <div class="about-icon">
        <i class={`fas ${iconClass}`}></i>
    </div>
    <h3 class="about-card-title">{title}</h3>
    <p class="about-card-description">{description}</p>
</div>

<style>
    .about-card {
        background-color: var(--white);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 2.5rem;
        transition: var(--transition);
        position: relative;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        align-items: center;
        text-align: center;
        height: 100%; /* Ensure cards have equal height in grid */
    }

    .about-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: linear-gradient(90deg, var(--primary), var(--secondary));
    }

    .about-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
    }

    .about-icon {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(37, 99, 235, 0.1);
        color: var(--primary);
        border-radius: 50%;
        font-size: 2rem;
        margin-bottom: 1.5rem;
        transition: var(--transition);
        flex-shrink: 0; /* Prevent icon from shrinking */
    }

    .about-card:hover .about-icon {
        background-color: var(--primary);
        color: var(--white);
    }

    .about-card-title {
        margin-bottom: 1rem;
        font-size: clamp(1.4rem, 2.5vw, 1.5rem); /* Responsive font size */
        color: var(--dark);
    }

    .about-card-description {
        color: var(--gray);
        font-size: 1rem;
    }
</style> 