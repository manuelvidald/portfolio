<style>
    .footer {
        background-color: var(--dark);
        color: var(--white);
        padding: 5rem 0 2rem;
        position: relative;
        overflow: hidden; /* Prevents shape overflow */
    }

    .footer::before {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 100%;
        height: 100%;
        background: radial-gradient(circle at 80% 20%, rgba(37, 99, 235, 0.2), transparent 40%);
        pointer-events: none;
        z-index: 0; /* Ensure it's behind content */
    }

    .footer-container {
        position: relative;
        z-index: 1;
    }

    .footer-content {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 3rem;
        margin-bottom: 3rem;
    }

    .footer-branding {
        flex: 1;
        min-width: 250px;
    }

    .footer-logo {
        font-size: 1.75rem;
        font-weight: 800;
        color: var(--white);
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }
    .footer-logo .logo-dot { /* Specific style for dot in footer */
        width: 8px;
        height: 8px;
        background-color: var(--secondary);
        border-radius: 50%;
    }

    .footer-branding p {
        color: rgba(255, 255, 255, 0.7);
        margin-bottom: 1.5rem;
        max-width: 400px; /* Limit width for better readability */
    }

    .social-links {
        display: flex;
        gap: 1rem;
    }

    .social-link {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(255, 255, 255, 0.1);
        color: var(--white);
        border-radius: 8px;
        text-decoration: none;
        transition: var(--transition);
        font-size: 1rem;
    }

    .social-link:hover {
        background-color: var(--primary);
        transform: translateY(-3px);
        color: var(--white); /* Ensure icon color stays white on hover */
    }

    .footer-nav {
        flex: 1;
        min-width: 200px;
        max-width: 250px; /* Max width for better layout */
    }

    .footer-title {
        font-size: 1.2rem;
        color: var(--white);
        margin-bottom: 1.5rem;
        position: relative;
        padding-bottom: 0.75rem;
    }

    .footer-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 40px;
        height: 3px;
        background-color: var(--primary);
        border-radius: 3px;
    }

    .footer-links {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-link {
        margin-bottom: 0.75rem;
    }

    .footer-link a {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        transition: var(--transition);
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .footer-link a:hover {
        color: var(--white);
        transform: translateX(3px);
    }
    .footer-link a i {
        font-size: 0.8em; /* Adjust icon size */
    }

    .footer-divider {
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        margin: 3rem 0 2rem;
    }

    .footer-bottom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        gap: 1rem;
    }

    .copyright {
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.9rem;
    }

    .footer-bottom-links {
        display: flex;
        gap: 1.5rem;
    }

    .footer-bottom-link {
        color: rgba(255, 255, 255, 0.7);
        text-decoration: none;
        font-size: 0.9rem;
        transition: var(--transition);
    }

    .footer-bottom-link:hover {
        color: var(--white);
    }

    /* Responsive Footer Styles */
    @media (max-width: 768px) {
        .footer-content {
            flex-direction: column;
            gap: 2.5rem; /* Adjusted gap */
            align-items: flex-start; /* Align items to start */
        }
        .footer-nav {
            max-width: none; /* Remove max-width on smaller screens */
            width: 100%;
        }
        .footer-bottom {
            flex-direction: column;
            text-align: center;
            gap: 1.5rem;
        }

        .footer-bottom-links {
            justify-content: center;
        }
    }
</style> 