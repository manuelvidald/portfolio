---
// src/components/SkillCard.astro
interface Props {
    iconClass: string;
    title: string;
    skills: string[];
}

const { iconClass, title, skills } = Astro.props;
---
<div class="skill-card">
    <div class="skill-header">
        <div class="skill-icon">
            <i class={`fas ${iconClass}`}></i>
        </div>
        <h3 class="skill-title">{title}</h3>
    </div>
    <ul class="skill-list">
        {skills.map(skill => (
            <li class="skill-item">
                <i class="fas fa-check skill-check"></i>
                {skill}
            </li>
        ))}
    </ul>
</div>

<style>
    .skill-card {
        background-color: var(--white);
        border-radius: var(--radius);
        overflow: hidden;
        box-shadow: var(--shadow);
        transition: var(--transition);
        height: 100%; /* Ensure consistent card height */
        display: flex;
        flex-direction: column;
    }

    .skill-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    .skill-header {
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
    }

    .skill-icon {
        width: 48px;
        height: 48px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(37, 99, 235, 0.1);
        color: var(--primary);
        border-radius: 12px;
        font-size: 1.5rem;
        transition: var(--transition);
        flex-shrink: 0; /* Prevent shrinking */
    }

    .skill-card:hover .skill-icon {
        background-color: var(--primary);
        color: var(--white);
    }

    .skill-title {
        font-size: clamp(1.2rem, 2.2vw, 1.4rem);
        margin-bottom: 0;
        color: var(--dark);
        font-weight: 700; /* Ensure title is bold */
    }

    .skill-list {
        padding: 1.5rem;
        list-style: none;
        flex: 1; /* Allow list to grow */
        margin: 0; /* Reset default ul margin */
    }

    .skill-item {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        padding: 0.75rem 0;
        border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        font-weight: 500;
        font-size: 0.95rem;
        color: var(--dark-light);
    }

    .skill-item:last-child {
        border-bottom: none;
    }

    .skill-check {
        color: var(--secondary);
        font-size: 1.1rem; /* Slightly smaller check */
        flex-shrink: 0;
    }

    @media (max-width: 480px) {
        .skill-header {
            padding: 1.25rem;
            gap: 0.75rem;
        }
        .skill-icon {
            width: 40px;
            height: 40px;
            font-size: 1.3rem;
        }
        .skill-list {
            padding: 1.25rem;
        }
        .skill-item {
            font-size: 0.9rem;
            padding: 0.6rem 0;
        }
    }
</style> 