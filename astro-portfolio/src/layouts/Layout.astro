---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Chatbot from '../components/Chatbot.astro'; // Assuming Chatbot is placed globally

// Import global CSS and JS directly for Astro to handle
import '../styles/global.css';
import '../scripts/global.js';

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&family=Fira+Code:wght@400;500&display=swap" rel="stylesheet">

    <!-- Global Styles are now imported in the script section -->

    <!-- Astro will handle component styles automatically -->
    <slot name="head" />
</head>
<body>
    <Header />
    <main>
        <slot /> <!-- Page content will be injected here -->
    </main>
    <Footer />
    <Chatbot />

    <!-- Global Scripts are now imported in the script section -->
    <slot name="scripts" />
</body>
</html> 